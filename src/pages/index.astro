---
import { Resize } from "@cloudinary/url-gen/actions";
import CldImage from "../components/CldImage.astro";
import OneColumnLayout from "../layouts/OneColumnLayout.astro";
import Section from "../components/Section.astro";
import Carousel from "../components/Carousel.astro";
---

<OneColumnLayout title="Welcome to KCI">
  <CldImage
    slot="hero"
    src="home-banner_xgcvqp"
    width="2000px"
    height="800px"
    alt="KCI banner"
    transform={(image) => image.resize(Resize.fill().width(2000).height(800))}
  />
  <Section>
    <Carousel
      density="dense"
      items={[
        {
          message: {
            title: "KCI announces 300 MTPD Formaldehyde expansion",
            detail:
              "KCI will expand its Formaldehyde capacity in Ankleshwar, Gujarat by 300 MTPD to cater to growing demand in the Western region. The expansion is expected to be complete in FY 2025.",
          },
        },
        {
          message: {
            title: "KCI commissions Phenol Resin plant at Ankleshwar",
            detail:
              "KCI has commissioned a new Phenol Formaldehyde resin plant at its Ankleshwar facility in Gujarat.",
          },
        },
      ]}
    />
  </Section>
</OneColumnLayout>
