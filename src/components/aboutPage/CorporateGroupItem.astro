---
import { grayscale } from "@cloudinary/url-gen/actions/effect";
import CldImage from "../CldImage.astro";
import { Resize } from "@cloudinary/url-gen/actions";

export interface Props {
  logoSrc: string;
  logoAlt: string;
  logoHeight?: string;
}

const { logoSrc, logoAlt, logoHeight } = Astro.props;
---

<div class="flex max-sm:flex-col items-center mb-8 last-of-type:mb-0">
  <CldImage
    src={logoSrc}
    width="150"
    height={logoHeight ?? "75"}
    alt={logoAlt}
    transform={(image) => image.resize(Resize.fit().width(150))}
    class="shrink-0 sm:mr-8 max-sm:mb-6"
  />
  <div><slot /></div>
</div>
