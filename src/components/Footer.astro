---
import { getPageLink } from "../utils";
import BoundedContainer from "./BoundedContainer.astro";
import Section from "./Section.astro";

const aboutPageLink = await getPageLink(
  import.meta.glob("../pages/about/index.astro")
);

const careersPageLink = await getPageLink(
  import.meta.glob("../pages/careers/index.astro")
);

const contactPageLink = await getPageLink(
  import.meta.glob("../pages/contact/index.astro")
);
---

<Section class="bg-neutral">
  <BoundedContainer>
    <footer class="footer p-10 text-neutral-content">
      <div>
        <span class="footer-title">Company Links</span>
        <a class="link link-hover" href={aboutPageLink.href}>
          {aboutPageLink.title}
        </a>
        <a class="link link-hover" href={contactPageLink.href}>
          {contactPageLink.title}
        </a>
        <a class="link link-hover" href={careersPageLink.href}>
          {careersPageLink.title}
        </a>
      </div>
      <div>
        <span class="footer-title">Legal</span>
        <a class="link link-hover">Terms of use</a>
        <a class="link link-hover">Privacy policy</a>
        <a class="link link-hover">Cookie policy</a>
      </div>
      <div>
        <span class="footer-title">Contact</span>
        <p class="text-lg">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4 inline-block"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
            ></path>
          </svg>
          +91-11-43579200<br />
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4 inline-block"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
            ></path>
          </svg>
          info@kanoriachem.com
        </p>
      </div>
    </footer>
  </BoundedContainer>
</Section>
