---
import { CloudinaryImage } from "@cloudinary/url-gen";
import CldImage from "./CldImage.astro";

export interface Props {
  image: {
    src: string;
    alt: string;
    transform?: (image: CloudinaryImage) => CloudinaryImage;
  };
}

const {
  image: { src, alt, transform = (i) => i },
} = Astro.props;
---

<div
  class="grid md:grid-cols-2 md:min-h-[320px] max-sm:shadow-xl max-sm:mb-4 max-sm:last:mb-0 group"
>
  <CldImage
    src={src}
    width="100%"
    height="100%"
    alt={alt}
    transform={transform}
    class="h-full object-cover overflow-hidden md:group-even:order-2"
  />
  <div class="flex flex-col justify-center items-center p-4 md:p-8">
    <div><slot /></div>
  </div>
</div>
