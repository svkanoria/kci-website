---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <slot name="hero" />
  <div class="md:container mx-auto">
    <div class="flex flex-col lg:flex-row">
      <nav
        class="flex-shrink-0 order-last lg:order-none w-60 max-w-full p-4 md:p-8 self-center lg:self-auto"
      >
        <slot name="navMenu" />
      </nav>
      <div class="flex-grow p-4 md:p-8">
        <slot />
      </div>
    </div>
  </div>
</Layout>
