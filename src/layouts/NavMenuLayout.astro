---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <slot name="hero" slot="hero" />
  <div class="flex flex-col lg:flex-row navshift:-translate-x-16">
    <nav
      class="flex-shrink-0 order-last lg:order-none w-72 max-w-full p-4 md:p-8 self-center lg:self-auto"
    >
      <slot name="navMenu" />
    </nav>
    <main class="flex-grow p-4 md:p-8">
      <slot />
    </main>
  </div>
</Layout>
